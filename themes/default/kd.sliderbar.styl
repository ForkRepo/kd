@import "./client/Framework/themes/default/kdfn"

.sliderbar-container
  size                100%, 13px
  border              1px solid #cfcfcf
  border-bottom-color #dbdbdb
  rounded             3px
  gradient            #e7e6e6, #fff
  rel()

  margin              50px
  width               200px

  .handle
    size              14px, 17px
    rounded           3px
    shadow            0 0 0 1px #888
    background        #dfdfdf
    top               -2px
    left              0
    z-index           3
    cursor            pointer
    margin            0 0 0 -7px
    abs()

  .handle:active
    z-index           4

  .bar
    size              40px, 100%
    rounded           3px
    gradient          #f39e3e, #d77d13
    shadow            0 -1px 0 rgba(255,255,255,.4), 
                      0 1px 0 rgba(0,0,0,0.2), 
                      0 0 0 1px #cb7b2c, 
                      inset 0 1px 2px rgba(255,255,255,.5)
    vendor            transition, width 400ms ease
    overflow          hidden
    z-index           2
    abs()