@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib/gradients"
@import "nib/vendor"

@css {
/*
KDFormView stylesheet
kd.formview.styl
*/
}

.kdformview

  .formline
    border-bottom       1px solid #e5e5e5
    padding             11px 20px 11px 20px
    size                auto,auto
    overflow            visible
    &:last-child
      border-bottom     none

    label
      min-width         90px
      fl()

    .input-wrapper
      overflow          hidden
    input
    textarea
      min-width         160px
      width             100%
      border            1px solid #c9c9c9
      color             #282521 !important
      line-height       14px
      display           block

    .on-off
      // float             right
      margin-top        0

    .select
      margin-right      10px

    p
      line-height       22px

    .kdautocompletewrapper
      min-width         160px
      color             #282521 !important
      line-height       14px
      blockMidTop()

    div.kdselectbox
      span.title
        line-height     23px
        height          22px

    .linkholder
      padding           0 0 10px 0
      display           inline-block
      width             200px
      a
        display         block
        cursor          pointer
        margin-bottom   5px

    >cite.hint
      font-size         11px
      color             #999

  .button-field
    height              auto
    background-color    #eee
    bottom              0
    rounded             0 0 5px 5px

    .kdbutton
      padding-right   10px
      padding-left    10px
      margin-left     6px
      width           auto
      margin-right    0
