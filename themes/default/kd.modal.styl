@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib/gradients"



/*
**  KDModal STYLES
*/
.dragInAction
  .kdmodal
    vendor            transition, none

.kdmodal
  abs()
  background-color    browser-bg
  z-index             10001
  top                 -1000%
  left                -1000%
  vendor              transition, top .15s ease-in-out\, left .15s ease-in-out
  shadow              0 3px 15px #444
  rounded             5px
  opacity             0.0001
  &.initial
    vendor            transition, none
  .kdmodal-title
    color             k-orange
    font-size         16px
    line-height       30px
    background-color  rgba(0,0,0,.05)
    margin            2px
    padding           2px 10px
    border-bottom     1px solid rgba(0,0,0,.1)
    cursor            move
    rounded(3px 3px 0 0)

  .kdmodal-content
    font-size         12px
    line-height       18px
    margin            2px
    padding           2px 10px
    rel()
    overflow          visible

    span.hint
      color             #7e6b3d
      background-color  #ffefce
      display           block
      line-height       25px
      margin            5px 0
      padding           0 10px
      border            1px dashed #dfd4b3
      font-style        italic
      font-size         .9em

  a.close-icon
    abs()
    cursor            pointer
    display           block
    top               8px
    right             5px
    line-height       24px
    text-align        center
    font-size         14px
    text-decoration   none
    color             #444
    size(20px,24px)
    &:hover
      color           k-orange

  .kdmodal-buttons,.button-field
    height            auto
    border-top        1px solid #ddd
    background-color  #eee
    bottom            0
    rounded(0,0,5px,5px)

    .kdbutton
      padding-right   10px
      padding-left    10px
      margin-right    0
      width           auto
      margin-left     6px
      fr()
  .button-field
    border-top-width  0

.kdmodal.with-buttons
  .kdmodal-content
    margin-bottom     50px

