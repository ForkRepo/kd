@import "./kdfn"

/*
**  KDScrollView STYLES
*/

.kdscrollview
  overflow          auto

  &.has-own-scrollbars
    overflow        hidden !important
    height          100%

.own-scrollbars-wrapper
  overflow          hidden !important
  size              100% 100%
  padding-right     15px
  padding-bottom    15px
  borderBox()
  rel()

  > .kdscrollview
    height          auto

  .kdscrolltrack
    right           0
    z-index         1000
    padding         0
    bg              color rgba(0, 0, 0, .1)
    abs()

    &.ver
      top           0
      size          15px 100%
      .kdscrollthumb
        size        100% auto

    &.hor
      bottom        0
      size          100% 15px

      .kdscrollthumb
        size        auto 100%

    .kdscrollthumb
      rel()
      cursor        default
      bg            color rgba(0, 0, 0, .2)
      vendor        transition, width .1s ease \,\
                              height .1s ease


