@import "./kdfn"

/* TipTip CSS - Version 1.2 */

#tiptip_holder
  display           none
  abs()
  top               0
  left              0
  z-index           99999

#tiptip_holder.tip_top
  padding-bottom    5px


#tiptip_holder.tip_bottom
  padding-top       5px


#tiptip_holder.tip_right
  padding-left      5px


#tiptip_holder.tip_left
  padding-right     5px


#tiptip_content
  font-size         11px
  color             #222
  text-shadow       0 1px 0 #fff
  padding           4px 8px
  border            1px solid rgba(255,255,255,0.25)
  gradient(#f2f2f2,#ddd)
  rounded(3px)
  shadow(0,1px,3px,#555)


#tiptip_arrow, #tiptip_arrow_inner
  abs()
  border-color      transparent
  border-style      solid
  border-width      6px
  size(0,0)


#tiptip_holder.tip_top #tiptip_arrow
  border-top-color      #fff
  border-top-color      rgba(68,68,68,0.35)


#tiptip_holder.tip_bottom #tiptip_arrow
  border-bottom-color   #fff
  border-bottom-color   rgba(68,68,68,0.35)


#tiptip_holder.tip_right #tiptip_arrow
  border-right-color    #fff
  border-right-color    rgba(68,68,68,0.35)


#tiptip_holder.tip_left #tiptip_arrow
  border-left-color     #fff
  border-left-color     rgba(68,68,68,0.35)


#tiptip_holder.tip_top #tiptip_arrow_inner
  margin-top            -7px
  margin-left           -6px
  border-top-color      rgb(242,242,242)
  border-top-color      rgba(242,242,242,0.92)


#tiptip_holder.tip_bottom #tiptip_arrow_inner
  margin-top            -5px
  margin-left           -6px
  border-bottom-color   rgb(242,242,242)
  border-bottom-color   rgba(242,242,242,0.92)


#tiptip_holder.tip_right #tiptip_arrow_inner
  margin-top            -6px
  margin-left           -5px
  border-right-color    rgb(242,242,242)
  border-right-color    rgba(242,242,242,0.92)


#tiptip_holder.tip_left #tiptip_arrow_inner
  margin-top            -6px
  margin-left           -7px
  border-left-color     rgb(242,242,242)
  border-left-color     rgba(242,242,242,0.92)


